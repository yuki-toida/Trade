@using Trade.UI.Web.Core.Static
@model Trade.UI.Web.Models.ViewModels.Calendar.CalendarViewModel

@Html.Partial("_Navigation", Model)

<div id="calendar"></div>

@section styles
{
    <link rel="stylesheet" href="@StaticUrl.GetLibraryUrl("fullcalendar/dist/fullcalendar.min.css")" />
    <link rel="stylesheet" href="@StaticUrl.GetLibraryUrl("fullcalendar/dist/fullcalendar.print.css")" />
    <link rel="stylesheet" href="@StaticUrl.GetCssUrl("fullcalendar.css")" />
}

@section scripts
{
    <script src="@StaticUrl.GetLibraryUrl("moment/min/moment.min.js")"></script>
    <script src="@StaticUrl.GetLibraryUrl("fullcalendar/dist/fullcalendar.min.js")"></script>
    <script src="@StaticUrl.GetScriptUrl("calendar.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var events = @Html.Raw(Model.Events);
            var date = '@Model.DefaultDate';
            createCalendar($('#calendar'), events, date);
        });
    </script>
}
